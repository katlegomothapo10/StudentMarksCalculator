@model StudentMarksCalculatorMVC.Models.ModuleMark

@{
    ViewData["Title"] = "Add Module Marks";
    var studentName = ViewBag.StudentName ?? "Student";
}

<h1><i class="fas fa-pencil-alt"></i> Add Module Marks for @studentName</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">Module @Model.ModuleNumber of 8</h5>
            </div>
            <div class="card-body">
                <form asp-action="AddMarks">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="StudentId" />
                    <input type="hidden" asp-for="ModuleNumber" />

                    <div class="form-group mb-3">
                        <label asp-for="Mark" class="control-label"></label>
                        <div class="input-group">
                            <input asp-for="Mark" class="form-control" type="number" step="0.1" min="0" max="100" />
                            <span class="input-group-text">%</span>
                        </div>
                        <span asp-validation-for="Mark" class="text-danger"></span>
                        <small class="form-text text-muted">Enter a mark between 0 and 100</small>
                    </div>

                    <div class="progress mb-3">
                        @{
                            var progressPercentage = (Model.ModuleNumber - 1) * 100 / 8;
                        }
                        <div class="progress-bar bg-success" role="progressbar" style="width: @progressPercentage%"
                             aria-valuenow="@progressPercentage" aria-valuemin="0" aria-valuemax="100">
                            Module @Model.ModuleNumber of 8
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Save Module @Model.ModuleNumber
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.StudentId" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">Module Information</h5>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Module Number
                        <span class="badge bg-primary rounded-pill">@Model.ModuleNumber</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Remaining Modules
                        <span class="badge bg-warning rounded-pill">@(8 - Model.ModuleNumber)</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Pass Mark Required
                        <span class="badge bg-success rounded-pill">50%</span>
                    </li>
                    <li class="list-group-item">
                        <strong>Tip:</strong> Enter marks carefully. Each module's mark will affect the final result.
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}