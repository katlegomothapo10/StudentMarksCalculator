@{
    ViewData["Title"] = "Home Page";
}

@model Dictionary<string, object>

<div class="text-center">
    <h1 class="display-4">Welcome to Student Marks Calculator</h1>
    <p class="lead">Calculate student results based on 8 modules with 50% pass rate</p>
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card text-white bg-primary mb-3">
            <div class="card-header">
                <i class="fas fa-users"></i> Students
            </div>
            <div class="card-body">
                <h5 class="card-title">@Model["TotalStudents"] Total Students</h5>
                <p class="card-text">
                    <span class="badge bg-success">@Model["TotalPassed"] Passed</span>
                    <span class="badge bg-danger">@Model["TotalFailed"] Failed</span>
                </p>
                <a asp-controller="Student" asp-action="Index" class="btn btn-light">
                    View All Students <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-header">
                <i class="fas fa-chart-line"></i> Performance
            </div>
            <div class="card-body">
                <h5 class="card-title">@Model["PassRate"]:F1% Pass Rate</h5>
                <p class="card-text">
                    Average Mark: @Model["AverageMark"]:F1%<br />
                    Highest Mark: @Model["HighestMark"]:F1%
                </p>
                <a asp-controller="Student" asp-action="Statistics" class="btn btn-light">
                    View Statistics <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-info mb-3">
            <div class="card-header">
                <i class="fas fa-plus-circle"></i> Quick Actions
            </div>
            <div class="card-body">
                <h5 class="card-title">Add New Student</h5>
                <p class="card-text">Start calculating marks for a new student</p>
                <a asp-controller="Student" asp-action="Create" class="btn btn-light">
                    Create Student <i class="fas fa-plus"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-warning">
                <i class="fas fa-info-circle"></i> How It Works
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 text-center">
                        <i class="fas fa-user-plus fa-3x text-primary"></i>
                        <h5>1. Add Student</h5>
                        <p>Enter student details</p>
                    </div>
                    <div class="col-md-3 text-center">
                        <i class="fas fa-pencil-alt fa-3x text-success"></i>
                        <h5>2. Enter Marks</h5>
                        <p>Input marks for 8 modules</p>
                    </div>
                    <div class="col-md-3 text-center">
                        <i class="fas fa-calculator fa-3x text-info"></i>
                        <h5>3. Calculate</h5>
                        <p>System automatically calculates results</p>
                    </div>
                    <div class="col-md-3 text-center">
                        <i class="fas fa-chart-bar fa-3x text-danger"></i>
                        <h5>4. View Results</h5>
                        <p>See pass/fail status and statistics</p>
                    </div>
                </div>
                <div class="alert alert-info mt-3">
                    <i class="fas fa-check-circle"></i>
                    <strong>Pass Requirement:</strong> Student must pass at least 4 out of 8 modules (50% pass rate)
                </div>
            </div>
        </div>
    </div>
</div>